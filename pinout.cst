// ============================================================
// Tang Nano 9K + LAN8720 RMII
// REF_CLK must be on a clock-capable pin (GCLK)
// ============================================================

// --------------------
// RMII REF_CLK (50MHz)
// LAN8720 INT/REFCLK -> FPGA CLK50
// --------------------
IO_LOC  "CLK50"           38;              // IOB31B (GCLK_4 region)
IO_PORT "CLK50"           IO_TYPE=LVCMOS33;

// --------------------
// RMII TX
// --------------------
IO_LOC  "RMII_TXD[0]"     77;              // IOT37A
IO_PORT "RMII_TXD[0]"     IO_TYPE=LVCMOS33;

IO_LOC  "RMII_TXD[1]"     76;              // IOT37B
IO_PORT "RMII_TXD[1]"     IO_TYPE=LVCMOS33;

IO_LOC  "RMII_TX_EN"      75;              // IOT38A
IO_PORT "RMII_TX_EN"      IO_TYPE=LVCMOS33;

// --------------------
// RMII RX
// --------------------
IO_LOC  "RMII_RXD[0]"     73;              // IOT39A
IO_PORT "RMII_RXD[0]"     IO_TYPE=LVCMOS33;

IO_LOC  "RMII_RXD[1]"     72;              // IOT39B
IO_PORT "RMII_RXD[1]"     IO_TYPE=LVCMOS33;

IO_LOC  "RMII_CRS_DV"     71;              // IOT41A
IO_PORT "RMII_CRS_DV"     IO_TYPE=LVCMOS33;

// Optional RX error (only if you actually wired LAN8720 RXER)
// If not used in RTL, you can remove these two lines.
IO_LOC  "RMII_RX_ER"      74;              // IOT38B (picked a nearby free pin)
IO_PORT "RMII_RX_ER"      IO_TYPE=LVCMOS33;

// --------------------
// MDIO management bus
// --------------------
IO_LOC  "RMII_MDC"        68;              // IOT42A
IO_PORT "RMII_MDC"        IO_TYPE=LVCMOS33;

IO_LOC  "RMII_MDIO"       69;              // IOT42B
IO_PORT "RMII_MDIO"       IO_TYPE=LVCMOS33 PULL_MODE=UP;

// --------------------
// Onboard LED (choose one you actually use in RTL: LED1)
// From your pinout image, common LED pins are IO ports in right side,
// but you already used LED1 in RTL. Here we map LED1 to IOT0A (pin 85)
// Change if your tutorial uses a different LED pin.
// --------------------
IO_LOC  "LED1"            11;              // IOT8A (example LED pin)
IO_PORT "LED1"            IO_TYPE=LVCMOS33;

// --------------------
// Buttons (2 buttons on board: S1/S2)
// These pin numbers depend on board routing.
// If you know your button pins, replace them here.
// For now, I map to two common GPIO pins you can physically access.
// --------------------
IO_LOC  "BTN1"            3;              // IOT5A (example)
IO_PORT "BTN1"            IO_TYPE=LVCMOS33 PULL_MODE=UP;

IO_LOC  "BTN2"            4;              // IOT6A (example)
IO_PORT "BTN2"            IO_TYPE=LVCMOS33 PULL_MODE=UP;

